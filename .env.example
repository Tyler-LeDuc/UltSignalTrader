# UltSignalTrader Configuration
# Copy this file to .env and fill in your values

# ====== Trading Configuration ======
# Trading mode: 'live' or 'backtest'
TRADING_MODE=backtest

# Default trading pair (use exchange format e.g., BTC/USDT)
DEFAULT_SYMBOL=BTC/USDT

# Timeframe for candles: 1m, 5m, 15m, 30m, 1h, 4h, 1d
DEFAULT_TIMEFRAME=1h

# Maximum position size as percentage of portfolio (0.0 to 1.0)
# Example: 0.1 = 10% of portfolio
MAX_POSITION_SIZE=0.1

# Stop loss percentage (positive number)
# Example: 2.0 = 2% stop loss
STOP_LOSS_PERCENTAGE=2.0

# Take profit percentage (positive number)
# Example: 5.0 = 5% take profit
TAKE_PROFIT_PERCENTAGE=5.0

# ====== Binance Configuration ======
# Get your API keys from: https://www.binance.com/en/my/settings/api-management
# For testnet: https://testnet.binance.vision/
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Use Binance testnet (true/false)
# Testnet allows paper trading without real money
BINANCE_TESTNET=true

# ====== Backtesting Configuration ======
# Start date for backtesting (ISO format: YYYY-MM-DD)
BACKTEST_START_DATE=2023-01-01

# End date for backtesting (ISO format: YYYY-MM-DD)
BACKTEST_END_DATE=2023-12-31

# Initial capital for backtesting (in USD)
INITIAL_CAPITAL=10000

# Trading commission (as decimal, e.g., 0.001 = 0.1%)
BACKTEST_COMMISSION=0.001

# ====== Logging Configuration ======
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (directory will be created if it doesn't exist)
LOG_FILE_PATH=logs/ultsignaltrader.log